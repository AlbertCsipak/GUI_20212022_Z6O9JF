<Window x:Class="GUI_20212022_Z6O9JF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_20212022_Z6O9JF"
        xmlns:vm="clr-namespace:GUI_20212022_Z6O9JF.ViewModels"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="IronCrest" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None" Icon="Images\Other\icon.png">
    <Grid x:Name="grid">
        <Image gif:ImageBehavior.AnimatedSource="\Images\Menu\main_background.gif" Stretch="Fill" Grid.ColumnSpan="1" Grid.RowSpan="1"/>
        <ContentControl Content="{Binding View}"></ContentControl>
        <MediaElement Source="Music/standard.mp3" LoadedBehavior="Manual" Name="music"/>
        <Button Style="{DynamicResource button_style}" x:Name="btn_mute" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="Button_Click" Height="50" Width="50" Margin="30,0,0,30" BorderBrush="Transparent">
            <Image x:Name="mute_image" Source="{Binding ImageSource, UpdateSourceTrigger=Default}"></Image>
        </Button>
    </Grid>
</Window>
