<UserControl x:Class="GUI_20212022_Z6O9JF.UserControls.GameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_20212022_Z6O9JF.UserControls"
             xmlns:renderer="clr-namespace:GUI_20212022_Z6O9JF.Renderer"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" SizeChanged="UserControl_SizeChanged" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image x:Name="background" Grid.RowSpan="3" Grid.ColumnSpan="3" Source="\Resources\Images\Map\blue_background.png" Stretch="Fill"/>
        
        <Grid x:Name="grid" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <renderer:Display x:Name="display"/>
        </Grid>
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
            <Image Source="\Resources\Images\Resources\heart.png" Width="100"/>
            <Image Source="\Resources\Images\Resources\sword.png" Width="100"/>
            <Image Source="\Resources\Images\Resources\gold.png" Width="100"/>
            <Label x:Name="lb_gold" Content="{Binding }"/>
        </StackPanel>
        
        <Label Content="{Binding CanSend}" Grid.Column="0" Grid.Row="0" Foreground="Red" Width="200" Height="100" FontSize="50" Background="Transparent"></Label>
        
        <Button Grid.Column="2" Grid.Row="1" Content="Add Unit" FontSize="50" Command="{Binding AddUnitCommand}" Height="100" Width="200" Margin="37,472,37,200"></Button>
        <Button Style="{StaticResource button_image_style}" Grid.Column="2" Grid.Row="2" Width="260" Height="170" Background="Transparent" Click="Button_Click">
            <Image x:Name="skip_image" Source="\Resources\Images\Menu\skip_framed_button_unpressed.png" Width="260"></Image>
        </Button>
    </Grid>
</UserControl>
