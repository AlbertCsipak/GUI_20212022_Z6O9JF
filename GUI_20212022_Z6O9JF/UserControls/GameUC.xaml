<UserControl x:Class="GUI_20212022_Z6O9JF.UserControls.GameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_20212022_Z6O9JF.UserControls"
             xmlns:vm="clr-namespace:GUI_20212022_Z6O9JF.ViewModels"
             xmlns:renderer="clr-namespace:GUI_20212022_Z6O9JF.Renderer"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" SizeChanged="UserControl_SizeChanged" Loaded="UserControl_Loaded">
    <UserControl.DataContext>
        <vm:GameViewModel></vm:GameViewModel>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Image x:Name="background" Grid.RowSpan="3" Grid.ColumnSpan="3" Source="\Resources\Images\Map\blue_background.png" Stretch="Fill"/>
       
        <Grid x:Name="grid" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" >
            <renderer:Display x:Name="display"/>
        </Grid>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Margin="20">
            <Image Source="\Resources\Images\Resources\heart.png" Width="90" />
            <Label Content="{Binding Popularity}" Height="100" Width="70" FontSize="70" FontFamily="\Resources\#8-bit Limit (BRK)" FontWeight="Bold" Margin="5,0,40,0" HorizontalContentAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\sword.png" Width="100"/>
            <Label Content="{Binding ArmyPower}" Height="100" Width="70" FontSize="70" FontFamily="\Resources\#8-bit Limit (BRK)" FontWeight="Bold" Margin="5,0,40,0" HorizontalContentAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\log.png" Width="140"/>
            <Label Content="{Binding Wood}" Height="100" Width="70" FontSize="70" FontFamily="\Resources\#8-bit Limit (BRK)" FontWeight="Bold" Margin="5,0,40,0" HorizontalContentAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\stone.png" Width="130"/>
            <Label Content="{Binding Stone}" Height="100" Width="70" FontSize="70" FontFamily="\Resources\#8-bit Limit (BRK)" FontWeight="Bold" Margin="5,0,40,0" HorizontalContentAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\wheat.png" Width="110"/>
            <Label Content="{Binding Food}" Height="100" Width="70" FontSize="70" FontFamily="\Resources\#8-bit Limit (BRK)" FontWeight="Bold" Margin="5,0,40,0" HorizontalContentAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Quests}" Height="60" Width="50" Text="Quests" FontSize="30" FontFamily="Poor Richard" Grid.Column="1">
                
            </ComboBox>
            <Label Content="{Binding CanSend}" Grid.Column="1" Grid.Row="0" Foreground="Red" Width="200" Height="100" FontSize="50" Background="Transparent"></Label>
        </StackPanel>
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Source="\Resources\Images\Resources\gold.png" Width="70" Grid.Column="0"/>
            <Label Content="{Binding Gold}" Grid.Column="1" Height="100" Width="70" FontSize="70" FontFamily="\Resources\#8-bit Limit (BRK)" Margin="5,0,40,0" HorizontalContentAlignment="Center"/>
            <Image Source="{Binding Faction}" Grid.Column="2"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="20">
            
        </StackPanel>

        

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Content="Move" FontSize="50" Command="{Binding AddUnitCommand}" Height="100" Width="200" Grid.Row="0"/>
            <Button Content="Produce" FontSize="50" Command="{Binding ProduceCommand}" Height="100" Width="200" Grid.Row="2"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Button Content="Build" FontSize="50" Command="{Binding AddVillageCommand}" Height="100" Width="200" Grid.Row="0"/>
            <Button Content="Upgrade" FontSize="50" Command="{Binding UpgradeVillageCommand}" Height="100" Width="200" Grid.Row="2"/>
        </Grid>
        <Label Grid.Column="1" Grid.Row="2" Width="100" HorizontalAlignment="Right" FontSize="70" Content="{Binding Timer}" Foreground="Red"></Label>
        <Button Style="{StaticResource button_image_style}" Command="{Binding SkipTurnCommand}" Grid.Column="2" Grid.Row="2" Width="260" Height="160" Background="Transparent" Click="Button_Click" >
            <Image x:Name="skip_image" Source="\Resources\Images\Menu\skip_button_unpressed.png" Width="220" Height="130">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="1" BlurRadius="30"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Button>
        <ContentControl x:Name="trade_control" Grid.Column="1" Grid.Row="1" Content="{Binding TradeView}">
            
        </ContentControl>
    </Grid>
</UserControl>
