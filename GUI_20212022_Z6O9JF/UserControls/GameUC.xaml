<UserControl x:Class="GUI_20212022_Z6O9JF.UserControls.GameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_20212022_Z6O9JF.UserControls"
             xmlns:renderer="clr-namespace:GUI_20212022_Z6O9JF.Renderer"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920" SizeChanged="UserControl_SizeChanged" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Image x:Name="background" Grid.RowSpan="3" Grid.ColumnSpan="3" Source="\Resources\Images\Map\blue_background.png" Stretch="Fill"/>
        
        <Grid x:Name="grid" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" >
            <renderer:Display x:Name="display"/>
        </Grid>
        <ComboBox ItemsSource="{Binding }" Height="60" Width="50" FontSize="30" FontFamily="Poor Richard" Grid.Column="1">
                        
        </ComboBox>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Margin="20">
            <Image Source="\Resources\Images\Resources\heart.png" Width="90" />
            <TextBlock Text="2" Height="70" Width="70" FontSize="70" FontFamily="Poor Richard" FontWeight="Bold" Margin="5,0,40,0" TextAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\sword.png" Width="100"/>
            <TextBlock Text="4" Height="70" Width="70" FontSize="70" FontFamily="Poor Richard" FontWeight="Bold" Margin="5,0,40,0" TextAlignment="Center"/>
        </StackPanel>
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Image Source="\Resources\Images\Resources\gold.png" Width="70" Grid.Column="0"/>
            <TextBlock Text="100" Height="80" FontSize="70" FontFamily="Poor Richard" FontWeight="Bold" Grid.Column="1"/>
            <Image Source="{Binding Quests}" Grid.Column="2"/>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="20">
            <Image Source="\Resources\Images\Resources\log.png" Width="140"/>
            <TextBlock Text="4" Height="70" Width="70" FontSize="70" FontFamily="Poor Richard" FontWeight="Bold" Margin="5,0,40,0" TextAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\stone.png" Width="130"/>
            <TextBlock Text="5" Height="70" Width="70" FontSize="70" FontFamily="Poor Richard" FontWeight="Bold" Margin="5,0,40,0" TextAlignment="Center"/>
            <Image Source="\Resources\Images\Resources\wheat.png" Width="110"/>
            <TextBlock Text="2" Height="70" Width="70" FontSize="70" FontFamily="Poor Richard" FontWeight="Bold" Margin="5,0,40,0" TextAlignment="Center"/>
        </StackPanel>

        <Label Content="{Binding CanSend}" Grid.Column="1" Grid.Row="0" Foreground="Red" Width="200" Height="100" FontSize="50" Background="Transparent"></Label>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Content="Move" FontSize="50" Command="{Binding AddUnitCommand}" Height="100" Width="200" Grid.Row="0"/>
            <Button Content="Produce" FontSize="50" Command="{Binding AddVillageCommand}" Height="100" Width="200" Grid.Row="2"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Content="Build" FontSize="50" Command="{Binding }" Height="100" Width="200" Grid.Row="0"/>
            <Button Content="Upgrade" FontSize="50" Command="{Binding }" Height="100" Width="200" Grid.Row="2"/>
        </Grid>
        <Button Style="{StaticResource button_image_style}" Grid.Column="2" Grid.Row="2" Width="260" Height="170" Background="Transparent" Click="Button_Click">
            <Image x:Name="skip_image" Source="\Resources\Images\Menu\skip_framed_button_unpressed.png" Width="260"></Image>
        </Button>
    </Grid>
</UserControl>
