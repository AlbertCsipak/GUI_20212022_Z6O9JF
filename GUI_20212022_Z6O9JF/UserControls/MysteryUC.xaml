<UserControl x:Class="GUI_20212022_Z6O9JF.UserControls.MysteryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI_20212022_Z6O9JF.UserControls"
             xmlns:vm="clr-namespace:GUI_20212022_Z6O9JF.ViewModels"
             xmlns:renderer="clr-namespace:GUI_20212022_Z6O9JF.Renderer"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="320" Background="{StaticResource greenish_blue}">
    <UserControl.DataContext>
        <vm:MysteryViewModel></vm:MysteryViewModel>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="mystery_description" FontSize="80" FontFamily="Poor Richard" Content="{Binding MysteryEventDescription}"/>
        <Button Grid.Row="1" Width="80" Height="30" Content="OK!"/>
    </Grid>

</UserControl>
